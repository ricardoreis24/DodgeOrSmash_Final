<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Neucha|Cabin+Sketch">
	<link rel="stylesheet" href="/assets/fonts/simple-line-icons.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
	<link rel="stylesheet" href="/assets/css/Navigation-with-Button.css">
	<link rel="stylesheet" href="/assets/css/Navigation-with-Search.css">
	<link rel="stylesheet" href="/assets/css/styles.css">
	<link rel="shortcut icon" type="image/x-icon" href="/assets/img/icon.ico" />
	<title>@ViewBag.Title  Dodge Or Smash</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding: 0" ; !important>
    <section id="main" style="width:100%;height:100vh;">
        <nav class="navbar navbar-light navbar-expand-md navigation-clean-search">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">DODGE OR SMASH</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse"
                     id="navcol-1">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Play", "Index", "Play")</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Shop", "Index", "Shop")</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("ScoreBoard", "Index", "ScoreBoard")</li>
                        <li class="nav-item" role="presentation">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.Partial("_LoginPartial")
                            }
                            else
                            {

                                @Html.ActionLink("Log in", "Login", "Account")
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="d-flex justify-content-center align-items-center align-content-center">
            @RenderBody()
        </div>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
</body>
</html>